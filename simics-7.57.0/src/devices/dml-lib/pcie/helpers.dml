dml 1.4;

template pcie_function_helpers {
    shared independent startup memoized method _dp_type() -> (uint8) throws;
    independent startup memoized method _dp_type() -> (uint8) throws {
        local exp_capability exp_cap;
        try {
            exp_cap = _find_exp_cap();
        } catch { throw; }
        return exp_cap.dp_type;
    }

    shared independent startup memoized method _find_exp_cap()
        -> (exp_capability) throws;
    independent startup memoized method _find_exp_cap() -> (exp_capability)
        throws {
        foreach cap in (each exp_capability in (bank)) {
            return cap;
        }
        throw;
    }

    shared independent startup memoized method _find_exp_dev() -> (exp_dev)
        throws;
    independent startup memoized method _find_exp_dev() -> (exp_dev) throws {
        foreach ed in (each exp_dev in (bank)) {
            return ed;
        }
        throw;
    }

    shared independent startup memoized method _find_exp_link() -> (exp_link)
        throws;
    independent startup memoized method _find_exp_link() -> (exp_link) throws {
        foreach link in (each exp_link in (bank)) {
            return link;
        }
        throw;
    }
}
